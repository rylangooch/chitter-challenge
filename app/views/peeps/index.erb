<h1> Peeps </h1>
<h2> Hi, please sign up or login to leave a peep </h2>

<% if current_user %>
  <form action='/peeps' method='post'>
    <!-- <label for='peep'>
    Peep: <input type="text" name="message"> -->
    <label for='peep'>
      Peep: <input id='peep' name='text' type='text'>
    </label>
    <input type="submit" value='Peep'>
  </form>
<% else %>
  <form action="/users/new">
    <input type="submit" value="Sign up">
  </form>
  <form action="/sessions/new">
    <input type="submit" value="Sign in">
  </form>
<% end %>


<% unless @peeps.nil?%>
  <% @peeps.reverse_each do |peep| %>
    <% if !peep.created_at.nil? %>
      <div class='center'>
        <p>username: <%=peep.user.username%><br></p>
        <p1><%= peep.text %><br></p1>
        <p>Posted: <%=peep.created_at.strftime("on %m/%d/%Y, at %I:%M%p")%></p>
      </div><br>
    <% end %>
  <% end %>
<% end %>
